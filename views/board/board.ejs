<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Board</title>

    <!-- Bootstrap Core CSS -->
    <link href="./resource/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="./resource/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="./resource/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/board">Junehay</a>
            </div>

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="/logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/board"><i class="fa fa-edit fa-fw"></i> Board</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header" style="text-align:center">Board</h1>
                </div>
            </div>
            <ul class="text-right">total document: <%=totalDocs%></ul>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel body">
                            <table width="100%" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <colgroup>
                                        <col width="5%">
                                        <col width="68%">
                                        <col width="9%">
                                        <col width="9%">
                                        <col width="9%">
                                    </colgroup>
                                    <tr>
                                        <th class="text-center">Num</th>
                                        <th>Title</th>
                                        <th class="text-center">Author</th>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Views</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% posts.forEach(function (post) { %>
                                    <tr>
                                        <td class="number" align="center">
                                            <%=post.number%>
                                        </td>
                                        <td class="title">
                                            <a href="/board/<%=post._id %>"><div><%= post.title %></div></a>
                                        </td>
                                        <td class="author" align="center">
                                            <%= post.author %>    
                                        </td>
                                        <td class="date" align="center">
                                            <% if(moment(post.createdAt).format('YYYY-MM-DD') == moment().format('YYYY-MM-DD')){ %>
                                              <%= moment(post.createdAt).format('HH:mm') %>
                                            <% }else{ %>
                                            <%= moment(post.createdAt).format('YYYY-MM-DD') %>
                                            <% } %>
                                        </td>
                                        <td class="views" align="center">
                                            <%= post.views %>    
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div style="float:left"><a class="btn btn-primary" href="/board/new">New</a></div>
                        <div style="float:right">
                            <form action="/board" method="GET">
                            <select name="searchType">
                                <option value="title">title</option>    
                                <option value="body">body</option>
                                <option value="author">author</option>
                            </select>
                            <input type="text" name="searchText" placeholder="구현중" readonly="readonly">
                            <button type="submit">search</button>
                            </form>
                        </div>
                   
                    <div align="center">
                        <ul class="pagination">
                            <% var offset = 3; %>
                            <% for(i=1;i<=maxPage;i++){ %>
                            <% if(i<=offset || i>maxPage-offset || (i>=page-(offset-1) && i<=page+(offset-1))){ %>
                                <% if(i != page){ %>
                                <li><a href="/board?page=<%= i %>"> <%= i %> </a></li>
                                <% } else { %>
                                <li><a><b><%= i %></b></a></li>
                                <% } %>
                            <% } else if(i == offset+1 || i == maxPage-offset){ %>
                                <li><a>...</a></li>
                            <% } %>
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="./resource/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="./resource/bootstrap.min.js"></script>

 
</body>

</html>
